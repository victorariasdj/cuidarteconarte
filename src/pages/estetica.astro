<style>
    
    .contenedor-principal {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
} 

.container {
    display: flex;
    align-items: center;
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    box-shadow: 0 10px 20px #dbdbdb;
    /* font-family: sans-serif; */
}

.palette {
    display: flex;
    flex-wrap: wrap;
    height: 100%;
    width: 100%;
}

.color {
    height: 100%;
    flex: 1;
    display: flex;
    justify-content: center;
    color: #1b6a65;
    font-weight: 600;
    letter-spacing: 1px;
    transition: flex 0.1s linear;
}

.color h2 {
    position: relative;
    top: 13em;
    font-size: 32px;
}

.color span {
    /* opacity: 0; */
    transition: opacity 0.1s linear;
}

.color:nth-child(1) {
    background-image: url(https://4by6fcry7qzuccgerlcxfuxzrx3rh5ippbx3ctnrxuw4uaxtsryq.arweave.net/4HHiijj8M0EIxIrFctL5jfcT9Q94b7FNsb0tygLzlHE);
    /* background: #1b6a65; */
    /* background-size:50vh; */
    background-size:cover;
    background-position: center;
    background-repeat:no-repeat;
}

.color:nth-child(2) {
    /* background: #1b6a65; */
    background-image: url(https://jpkrym3dxeegggaqio6twcucmmsfywwfoi3z7bzxqy75iatnvblq.arweave.net/S9UcM2O5CGMYEEO9OwqCYyRcWsVyN5-HN4Y_1AJtqFc);

    background-size:cover;
    background-position: top;
    background-repeat:no-repeat;
}

.color:nth-child(3) {
    background-image: url(https://cwvqhpgqbpinmkrmzvgasa6ajijoeurjraivhtn3zqz3eopwgvca.arweave.net/FasDvNAL0NYqLM1MCQPAShLiUimIEVPNu8wzsjn2NUQ);
    background-size:cover;
    background-position:center;
    background-repeat:no-repeat;
    /* background: #1b6a65; */
}

.color:nth-child(4) {
    background: #f4a261;
}

.color:nth-child(5) {
    background: #e76f51;
}

.color:hover {
    flex: 2;
    box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
}

.color:hover span {
    opacity: 1;
}

/* Ajustes para dispositivos pequeños */
@media (max-width: 1270px) {
    .container {
        flex-direction: column;
    }

    .palette {
        flex-direction: column;
    }

    .color {
        height: auto;
        /* flex: 1; */
        box-shadow: none; /* Desactiva el efecto hover */
    }

    .color span {
        opacity: 1; /* Siempre visible */
    }

    .color h2 {
        position: static;
        margin: 4em 0 0 0;

    }
    .color:nth-child(1) {
    background-position: top;
        
    }
}


</style>