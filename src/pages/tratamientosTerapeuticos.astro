---
import Layout from "../layouts/Layout.astro";


---

<Layout title="Tratamientos Terapeuticos" description="Nuestros tratamientos terapéuticos incluyen masajes restauradores, rituales relajantes y prácticas energéticas que armonizan cuerpo, mente y espíritu." image="/src/assets/og-tratamientos-terapeuticos.webp" keywords="belleza, bienestar, relajación, masaje, tratamiento, ritual, manos, pies, tratamiento corporal, kobido, shiatsu, reiki, espiritual, chamánico, masaje energético, masaje sueco, masaje californiano, masaje revitalizante,  " >
    
<div class="contenedor-principal">
    <div class="container">
      <div class="palette">
          <a href="/masajesCorporales" class="color"><span><h2>Masajes Corporales</h2></span></a>
          <a href="/ritualesRelajantes" class="color"><span><h2>Rituales Relajantes</h2></span></a>
        <a href="/ritualesEnergeticos" class="color"><span><h2>Rituales Energéticos</h2></span></a>
      </div>
    </div>
</div>
</Layout>

<style>
    
    .contenedor-principal {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
} 

.container {
    display: flex;
    align-items: center;
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    box-shadow: 0 10px 20px #dbdbdb;
    /* font-family: sans-serif; */
}

.palette {
    display: flex;
    flex-wrap: wrap;
    height: 100%;
    width: 100%;
}

.color {
    height: 100%;
    flex: 1;
    display: flex;
    justify-content: center;
    color: #1b6a65;
    font-weight: 600;
    letter-spacing: 1px;
    transition: flex 0.1s linear;
}

.color h2 {
    position: relative;
    top: 13em;
    font-size: 32px;
}

.color span {
    /* opacity: 0; */
    transition: opacity 0.1s linear;
}

.color:nth-child(1) {
    background-image: url(/src/assets/masajes-corporales.webp);
    /* background: #1b6a65; */
    /* background-size:50vh; */
    background-size:cover;
    background-position: center;
    background-repeat:no-repeat;
}

.color:nth-child(2) {
    /* background: #1b6a65; */
    background-image: url(/src/assets/masaje-con-plumas.webp);

    background-size:cover;
    background-position: top;
    background-repeat:no-repeat;
}

.color:nth-child(3) {
    background-image: url(/src/assets/reiki2.webp);
    background-size:cover;
    background-position:center;
    background-repeat:no-repeat;
    /* background: #1b6a65; */
}

.color:nth-child(4) {
    background: #f4a261;
}

.color:nth-child(5) {
    background: #e76f51;
}

.color:hover {
    flex: 2;
    box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
}

.color:hover span {
    opacity: 1;
}

/* Ajustes para dispositivos pequeños */
@media (max-width: 1270px) {
    .container {
        flex-direction: column;
    }

    .palette {
        flex-direction: column;
    }

    .color {
        height: auto;
        /* flex: 1; */
        box-shadow: none; /* Desactiva el efecto hover */
    }

    .color span {
        opacity: 1; /* Siempre visible */
    }

    .color h2 {
        position: static;
        margin: 4em 0 0 0;

    }
    .color:nth-child(1) {
    background-position: top;
        
    }
}


</style>