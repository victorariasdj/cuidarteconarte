<style>

    .contenedor {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .logo {
        margin-top: 12px;
    }

    .nav-img {
        
        width: 180px;
        object-fit: cover;
    }

    .navegacion {
        display: flex;
        flex: 1 1;
        flex-direction: column;
        justify-content: space-evenly;
        padding: 8px;
    }

    .navegacion a {
      display: flex;
      flex-direction: column;
      justify-content: center;
        text-decoration: none;
        list-style: none;
        color: #4f4f4f;
        height: 40px;
    }

    .navegacion a:hover {
      background-color: #ddb531;
    }

    .burger {
        display: none;
    }
    @media (max-width: 1270px){

      .contenedor {
        flex-direction: row;
      }

        .navegacion {
    display: none; /* Oculto por defecto */
    position: absolute;
    top: 0px; /* Ajusta según el diseño */
    left: 0;
    width: 100%;
    background-color: white;
    flex-direction: column;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    z-index: 100;
  }

  .navegacion.active {
    display: flex; /* Mostrar menú */
    position: fixed;
    margin-top: 60px;
  }

  .logo {
    display: none;
  }

        .burger {
  position: relative;
  width: 40px;
  height: 30px;
  background: transparent;
  cursor: pointer;
  display: block;
  margin: 20px;

}

.burger span {
  display: block;
  position: absolute;
  height: 4px;
  width: 100%;
  background: #000;
  border-radius: 9px;
  opacity: 1;
  left: 0;
  transform: rotate(0deg);
  transition: 0.25s ease-in-out;
}

.burger span:nth-of-type(1) {
  top: 0px;
  transform-origin: left center;
}

.burger span:nth-of-type(2) {
  top: 50%;
  transform: translateY(-50%);
  transform-origin: left center;
}

.burger span:nth-of-type(3) {
  top: 100%;
  transform-origin: left center;
  transform: translateY(-100%);
}

.burger.active span:nth-of-type(1) {
  transform: rotate(45deg);
  top: 0px;
  left: 5px;
}

.burger.active span:nth-of-type(2) {
  width: 0%;
  opacity: 0;
}

.burger.active span:nth-of-type(3) {
  transform: rotate(-45deg);
  top: 28px;
  left: 5px;
}
}

</style>

<script>
  const initBurgerMenu = () => {
  const burger = document.querySelector('.burger');
  const navegacion = document.querySelector('.navegacion');

  if (!burger || !navegacion) return;

  // Remover eventos previos si existieran para evitar duplicados
  burger.replaceWith(burger.cloneNode(true));
  navegacion.replaceWith(navegacion.cloneNode(true));

  // Obtener nuevamente los elementos
  const newBurger = document.querySelector('.burger');
  const newNavegacion = document.querySelector('.navegacion');

  // Función para alternar el menú
  const toggleMenu = () => {
    newBurger.classList.toggle('active');
    newNavegacion.classList.toggle('active');
  };

  // Función para cerrar el menú al hacer clic fuera
  const closeMenu = (event) => {
    if (
      !newBurger.contains(event.target) && // Clic fuera del botón hamburguesa
      !newNavegacion.contains(event.target) // Clic fuera del menú
    ) {
      newBurger.classList.remove('active');
      newNavegacion.classList.remove('active');
    }
  };

  // Evento de clic en el botón hamburguesa
  newBurger.addEventListener('click', toggleMenu);

  // Evento para cerrar el menú al hacer clic fuera de él
  document.addEventListener('click', closeMenu);
};

// Escuchar los cambios de página usando el ClientRouter
document.addEventListener('astro:page-load', initBurgerMenu);

// Ejecutar la función en la carga inicial
document.addEventListener('DOMContentLoaded', initBurgerMenu);

</script>
